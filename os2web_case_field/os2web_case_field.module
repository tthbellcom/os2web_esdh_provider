/**
 * Implements hook_field_formatter_info().
 */
function os2web_case_field_field_formatter_info() {
  return array(
    'os2web_case_field_case_ident_formatter' => array(
      'label' => t('ESDH Case includer'),
      'field types' => array('os2web_case_field_case_ident'),
