  );
}

/**
 * Implements hook_field_widget_info().
 */
function os2web_case_field_field_widget_info() {

  return array(
    'os2web_case_field_case_ident_widget' => array(
      'label' => t('Case Identifier'),
      'field types' => array('os2web_case_field_case_ident'),
    ),
