}

/**
 * Implements hook_field_widget_info().
 */
function os2web_doc_field_field_widget_info() {
  return array(
    'os2web_case_field_doc_ident_widget' => array(
      'label' => t('Document Identifier'),
      'field types' => array('os2web_case_field_doc_ident'),
    ),
